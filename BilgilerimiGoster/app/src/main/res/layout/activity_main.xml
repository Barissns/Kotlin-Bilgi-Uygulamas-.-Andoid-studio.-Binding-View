<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/brown"
        android:hint="@string/bilgilerimiGosterUygulamasÄ±"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:flow_verticalAlign="top"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/adSoyad"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:autofillHints="@string/isminiziGirin"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/isminiziGirin"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:gravity="left|center"/>

    <Button
        android:id="@+id/BtnGoster"
        android:layout_width="265dp"
        android:layout_height="75dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/brown"
        android:hint="@string/bilgilerimiGoster"
        android:text="@string/bilgilerimiGoster"
        app:layout_constraintEnd_toEndOf="@+id/adSoyad"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/adSoyad"
        app:layout_constraintTop_toBottomOf="@+id/adSoyad" />

    <TextView
        android:id="@+id/gostertext"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:hint="@string/bilgiSonuclari"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnGoster"
        android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>